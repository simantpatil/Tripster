<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorControlHighlight">@color/transparent_light</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/main_blue</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="SplashScreen" parent="NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="YellowTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_yellow_enable_style</item>
    </style>

    <style name="VioletTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_violet_enable_style</item>
    </style>

    <style name="RedTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_red_enable_style</item>
    </style>

    <style name="BlueTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/button_blue_enable_style</item>
    </style>

    <style name="BlueButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/main_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="SwitchText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Spinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_smaller</item>
    </style>

    <style name="DateTimePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/main_yellow</item>
        <item name="colorPrimary">@color/main_yellow</item>
        <item name="android:buttonBarButtonStyle">@style/YellowTextButton</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorAccent">@color/main_yellow</item>
    </style>

    <style name="FloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/light_gray</item>
    </style>

    <style name="EditTextSpinnerRed" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorAccent">@color/main_red</item>
        <item name="colorPrimary">@color/main_red</item>
    </style>

    <style name="EditTextSpinnerPink" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorAccent">@color/main_pink</item>
        <item name="colorPrimary">@color/main_pink</item>
    </style>

</resources>
