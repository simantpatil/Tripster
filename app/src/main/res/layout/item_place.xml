<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_tiny"
    app:cardCornerRadius="@dimen/corner_radius_small">

    <LinearLayout
        android:id="@+id/place_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/ripple_note_item"
        android:orientation="vertical"
        android:padding="@dimen/padding_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/place_item_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_smaller"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/roboto_light"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/place_item_rate"
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/photo"/>

        </LinearLayout>

        <TextView
            android:id="@+id/place_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_bold"/>

        <TextView
            android:id="@+id/place_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:textSize="@dimen/text_smaller"
            android:textColor="@color/darker_gray"
            android:fontFamily="@font/raleway_medium"/>

        <TextView
            android:id="@+id/place_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_smaller"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black"
            android:fontFamily="@font/raleway_regular"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>