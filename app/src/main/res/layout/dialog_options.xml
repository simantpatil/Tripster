<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:minWidth="@dimen/dialog_input_width"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/dialog_options_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/dialog_notes_options_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_medium"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_options_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_options_title"
        android:layout_marginTop="@dimen/margin_tiny"
        android:paddingVertical="@dimen/padding_small"
        style="@style/RedTextButton"
        app:rippleColor="@color/red_bg_lighter"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/dialog_notes_options_edit"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_regular"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/dialog_options_remove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_options_edit"
        android:paddingVertical="@dimen/padding_small"
        style="@style/RedTextButton"
        app:rippleColor="@color/red_bg_lighter"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/dialog_notes_options_remove"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_regular"/>

</androidx.constraintlayout.widget.ConstraintLayout>